.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #2c3e50;
  text-align: center;
  margin-bottom: 40rpx;
}

.input-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.input-item {
  margin-bottom: 20rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.picker {
  background-color: #f8f9fa;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  color: #2c3e50;
}

.generate-btn {
  background-color: #2c3e50;
  color: #fff;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 8rpx;
  margin: 30rpx 0;
}

.result-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.result-title {
  font-size: 32rpx;
  color: #2c3e50;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.id-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.id-item {
  background-color: #f8f9fa;
  padding: 20rpx;
  border-radius: 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.id-item text {
  font-size: 32rpx;
  color: #2c3e50;
}

.copy-hint {
  font-size: 24rpx;
  color: #666;
} 